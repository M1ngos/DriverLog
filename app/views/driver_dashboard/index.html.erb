<!-- app/views/driver_dashboard/index.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Driver Dashboard</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <h1>Driver Dashboard</h1>

  <!-- Display current shift information -->
  <% if current_driver.current_shift %>
    <p>Current Shift: Started at <%= current_driver.current_shift.clock_in %></p>
    <!-- Button to clock out -->
    <%= button_to 'Clock Out', drivers_shift_path(current_driver.current_shift), 
                  method: :patch, 
                  params: { shift: { clock_out: Time.current } }, 
                  class: 'btn btn-danger' %>
  <% else %>
    <!-- No active shift: Button to clock in -->
    <p>No active shift. 
       <%= button_to 'Clock In', drivers_shifts_path, 
                     method: :post, 
                     params: { shift: { clock_in: Time.current } }, 
                     class: 'btn btn-success' %>
    </p>
  <% end %>

  <!-- Display tasks -->
  <h2>My Tasks</h2>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, drivers_task_path(task) %> - 
        <%= task.completed ? "Completed" : "Not Completed" %>
      </li>
    <% end %>
  </ul>
</body>
</html>
